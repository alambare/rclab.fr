{% extends "compte.html.twig" %}

{% block content %}
    <div class="container-fluid add-type-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-5 col-lg-offset-2">
                <div class="form-top">
                    <div class="form-top-left">
                        <h1>{{ tdemande.typeDemande }}</h1>
                    </div>
                    <div class="form-top-right">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-send" aria-hidden="true"></i></span>
                            {{ form_label(form.typeDemande) }}
                            {{ form_widget(form.typeDemande) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-text-background" aria-hidden="true"></i></span>
                            {{ form_label(form.couleur) }}
                            {{ form_widget(form.couleur) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group select-text">
                            <h3>
                                {{ form_label(form.historique) }}
                                {{ form_widget(form.historique) }}
                                Historiser le type
                            </h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            {% if tdemande.icone is not null %}
                                <img class="icone" src="{{ asset('uploads/images/'~tdemande.icone) }}"/>
                                <br>
                            {% else %}
                                <p>Pas d'icône</p>
                            {% endif %}
                            <button type="button" class="btn-upload" onclick="document.getElementById('fileButton').click()">Choisir un icône</button>
                            {{ form_row(form.icone) }}
                        </div>
                    </div>
                    {{ form_row(form.Valider) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}