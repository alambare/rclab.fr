{% extends "compte.html.twig" %}

{% block content %}
    <div class="container-fluid edit-repair-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9">
                <div class="form-top-admin">
                    <div class="form-top-left">
                        <h1>Gérer la réparation</h1>
                    </div>
                    <div class="form-top-right">
                        <i class="glyphicon glyphicon-wrench"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    {{ form_start(form) }}
                    <div class="form-group textarea">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-wrench" aria-hidden="true"></i></span>
                            {{ form_label(form.objet) }}
                            {{ form_widget(form.objet) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <div class="input-group select-text">
                                <h4>Responsable : </h4>
                                <div class="styled">
                                    {{ form_label(form.responsable) }}
                                    {{ form_widget(form.responsable) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <div class="input-group select-text">
                                <h4>Etat : </h4>
                                <div class="styled">
                                    {{ form_label(form.etat) }}
                                    {{ form_widget(form.etat) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if form.debut is defined %}
                        <div class="form-group">
                            <div class="input-group select-date">
                                <h4>Disponibilités du demandeur : </h4>
                                <p>{{ repair.disponibiliteDemandeur }}</p>
                                <h4>Rendez-vous : </h4>
                                <div class="styled">
                                    {{ form_label(form.debut) }}
                                    {{ form_widget(form.debut) }}
                                </div>
                            </div>
                            <br>
                        </div>
                    {% endif %}
                    <br>
                    <div class="form-group">
                        <div class="input-group">
                            <h4>Demande :</h4>
                            <div class="textarea">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                    </div>
                    <br>
                    {{ form_row(form.Valider) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}