{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/rclabwebsite/css/form-demand.css') }}" />
{% endblock %}

{% block body %}
    <div class="course-body" href="">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-lg-offset-2 col-md-offset-1">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h1>Demander un cours</h1>
                        </div>
                        <div class="form-top-right">
                            <i class="glyphicon glyphicon-send"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <div class="form-group" style="background: red;">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                {{ form_label(form.objet) }}
                                {{ form_widget(form.objet) }}
                            </div>
                            <div class="input-group">
                                {{ form_label(form.matiere) }}
                                {{ form_widget(form.matiere) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                {{ form_label(form.disponibiliteDemandeur) }}
                                {{ form_widget(form.disponibiliteDemandeur) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    <div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@RCLABUserBundle/Resources/public/js/jquery.backstretch.min.js'
        '@RCLABWebsiteBundle/Resources/public/js/demand.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
