<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>RC Lab</title>
    <link rel="shortcut icon" href="{{ asset('images/rclab.png') }}">
    {% stylesheets '@RCLABWebsiteBundle/Resources/public/css/base.css'
        '@RCLABWebsiteBundle/Resources/public/css/actualite.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}

</head>

<body>
<header>
    <a href="{{ path('rclab_website_home') }}"><img src="{{ asset('uploads/images/logo_asso.png') }}" alt="logo RC Lab"/></a>
    <nav>
        <ul>
            <li><a href="{{ path('rclab_website_association') }}">L'association</a></li>
            <li><a href="{{ path('rclab_website_contact') }}">Nous contacter</a></li>
            <li><a href="{{ path('rclab_website_actualite') }}">Actualités</a>
                <ul>
                    <li><a href="{{ path('rclab_website_actualite_events') }}">Evènements</a></li>
                    <li><a href="{{ path('rclab_website_actualite_news') }}">News</a></li>
                </ul>
            </li>
            <li><a href="{{ path('rclab_website_reparation') }}">Réparations</a></li>
            <li><a href="{{ path('rclab_website_cours') }}">Cours</a></li>
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                <li><a href="{{ path('rclab_user_profile') }}">Compte</a></li>
                <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                <li><a href="{{ path('rclab_user_registration_register') }}">Inscription</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

<div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>
<footer>
    <p>footer de notre site web</p>
</footer>
</body>
</html>
