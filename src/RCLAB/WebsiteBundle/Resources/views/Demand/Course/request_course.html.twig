{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/rclabwebsite/css/form-demand.css') }}" />
{% endblock %}

{% block body %}
    <div class="course-body" href="">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-lg-offset-2 col-md-offset-1">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h1>Demander un cours</h1>
                        </div>
                        <div class="form-top-right">
                            <i class="glyphicon glyphicon-send"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase" aria-hidden="true"></i></span>
                                    {{ form_label(form.objet) }}
                                    {{ form_widget(form.objet) }}
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                <div class="input-group">
                                    <div class="styled">
                                        {{ form_label(form.matiere) }}
                                        {{ form_widget(form.matiere) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <h4>Votre demande :</h4>
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <h4>Vos disponibilit√©s :</h4>
                                {{ form_label(form.disponibiliteDemandeur) }}
                                {{ form_widget(form.disponibiliteDemandeur) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@RCLABUserBundle/Resources/public/js/jquery.backstretch.min.js'
        '@RCLABWebsiteBundle/Resources/public/js/demand.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
