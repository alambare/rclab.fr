{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/rclabuser/css/form-user.css') }}" />
{% endblock %}

<div class="registration-body" href="{{ asset('bundles/rclabuser/images/registration.jpg') }}">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-8 col-xs-8 col-lg-offset-4 col-md-offset-3 col-sm-offset-2 col-xs-offset-2 form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h1>Informations</h1>
                    </div>
                    <div class="form-top-right">
                        <i class="glyphicon glyphicon-info-sign"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <div class="fos_user_user_show">
                        <p>{{ 'profile.show.username'|trans }} : {{ user.username }}</p>
                        <p>{{ 'profile.show.email'|trans }} : {{ user.email }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {% javascripts
        '@RCLABUserBundle/Resources/public/js/jquery.backstretch.min.js'
        '@RCLABUserBundle/Resources/public/js/registration.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

