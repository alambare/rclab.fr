{% extends "@RCLABWebsite/Actualite/actus.html.twig" %}

{% block actu %}
    <section class="index-content">
        <div class="detail-event-body">
            <div class="container-fluid">
                <div class="row">
                    {% if news.image is not null %}
                    <div class="col-lg-4 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1">
                        <div class="picture-detail">
                            <img src="{{ asset('uploads/images/'~news.image) }}"/>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-10 col-xs-12 col-lg-offset-2 col-sm-offset-1">
                        {% elseif news.image is null %}
                        <div class="col-lg-6 col-md-8 col-sm-10 col-xs-12 col-lg-offset-3 col-md-offset-2 col-sm-offset-1">
                            {% endif %}
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h1>{{ news.title }}</h1>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-bookmark"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <br/>
                                <p>Publiée le {{ news.shareDate|date('d/m/Y H:i') }}</p>
                                <br/>
                                <h4>Description de la news :</h4>
                                <p>{{ news.description }}</p>
                                {% if news.link is not null %}
                                    <br/>
                                    <p>Pour plus d'informations, cliquez sur ce lien:</p>
                                    <p><a href="{{ news.link }}">{{ news.link }}</a></p>
                                {% endif %}
                            </div>
                        </div>
                    </div>{#
                <nav aria-label="...">
                    <ul class="pager">
                        <li class="previous"><a href="#"><span aria-hidden="true">&larr;</span> Précédent</a></li>
                        {% if event.maxParticipants is not null %}
                            <a href="{{ path('rclab_website_actualite_event_subscribe', {'id': event.id}) }}" class="btn btn-primary">Je m'inscris</a>
                        {% endif %}
                        <li class="next"><a href="#">Suivant <span aria-hidden="true">&rarr;</span></a></li>
                    </ul>
                </nav>
                #}
                </div>
            </div>
        </div>
    </section>
{% endblock %}